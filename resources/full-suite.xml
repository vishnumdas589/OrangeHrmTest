<suite name="Full Suite" parallel="classes" thread-count="3">
    <parameter name="browser" value="chrome"/>


    <listeners>
        <listener class-name="com.orangehrm.listeners.Listener"/>
    </listeners>

    <test name="Complete Test Suite">
        <classes>
            <class name="com.orangehrm.tests.LoginTests"/>
            <class name="com.orangehrm.tests.DashBoardTests"/>
            <class name="com.orangehrm.tests.PIMTests"/>
            <class name="com.orangehrm.tests.AdminTests"/>
            <class name="com.orangehrm.tests.LeaveTests"/>
        </classes>
    </test>
</suite>
