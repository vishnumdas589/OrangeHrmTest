<?xml version="1.0" encoding="UTF-8"?>
<suite thread-count="2" parallel="tests" name="crossbrowserSuite">
	<listeners>
		<listener class-name="com.orangehrm.listeners.Listener" />
	</listeners>
	<test name="ChromeTest">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.orangehrm.tests.LoginTests" />
			<class name="com.orangehrm.tests.DashBoardTests" />
			<class name="com.orangehrm.tests.PIMTests"/>
			<class name="com.orangehrm.tests.AdminTests"/>
			<class name="com.orangehrm.tests.LeaveTests"/>
		</classes>
	</test> <!-- ChromeTest -->
	<test name="FireFoxTest">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.orangehrm.tests.LoginTests" />
			<class name="com.orangehrm.tests.DashBoardTests" />
			<class name="com.orangehrm.tests.PIMTests"/>
			<class name="com.orangehrm.tests.AdminTests"/>
			<class name="com.orangehrm.tests.LeaveTests"/>
		</classes>
	</test> <!-- ChromeTest -->
</suite> <!-- corssbrowserSuite -->
